generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        Int     @id @default(autoincrement())
  bio       String?
  userId    Int     @unique
  avatar    String?
  githubUrl String
  user      User    @relation(fields: [userId], references: [id])
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?
  isActive     Boolean  @default(false)
  githubId     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  refreshToken String?  @unique
  mobile       String?
  RBankCode    String?
  RBankAccount String?
  profile      Profile?
}

enum ClassStatus {
  // 모집 준비중
  PREPARING
  // 모집중
  RECRUITING
  // 모집완료
  RECRUITMENT_CLOSED
  // 진행중
  INPROGRESS
  // 종료
  CLOSED
}

model Class {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now()) @updatedAt
  thumbnail     String
  name          String
  remarks       String
  startDateTime DateTime
  endDateTime   DateTime
  status        ClassStatus
}
