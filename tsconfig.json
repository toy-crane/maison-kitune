{
  "compilerOptions": {
    "outDir": "public",
    "lib": ["esnext"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true
    // custom type 경로 추가
    // "typeRoots": ["node_modules/@types", "src/types/**"]
  },
  "include": ["src/**/*", "api"],
  "exclude": [
    "node_modules",
    "**/__mocks__/**/*",
    "**/__test__/**/*",
    "**/*.spec.ts"
  ]
}
